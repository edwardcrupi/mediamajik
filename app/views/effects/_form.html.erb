      <ul>
      <% @effect.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :effect_type %><br>
    <%= f.select(:effect_type, options_for_select([["Brightness", "Brightness"], ["Saturation", "Saturation"], ["Hue", "Hue"]])) %>
  </div>

  <div class="field">
    <%= f.label :amount %>

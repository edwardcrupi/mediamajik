<h1>Select user to share <%= link_to image_tag(image.image_url(:thumb).to_s), image %> with:</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% users.each do |user| unless user == current_user %>
      <tr>

        <%= render partial: "user_row", locals: {user: user} %>
        <td>
          <%= if user.shared_images.include? image then link_to "Already shared with #{user.username}", unshare_image_path(user, image), method: :post else link_to "Share with #{user.username}", share_image_path(user, image), method: :post end %>
        </td>
      </tr>
    <% end end %>
  </tbody>
</table>

<br>
<h1> Current version </h1>
<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag image.image_url(:image).to_s %>
</p>

<p>
  <strong>Height:</strong>
  <%= image.height %>
</p>

<p>
  <strong>Width:</strong>
  <%= image.width %>
</p>

<p>
  <strong>Title:</strong>
  <%= image.title %>
</p>

<p>
  <strong>Caption:</strong>
  <%= image.caption %>
</p>

<p>
 <strong>Size:</strong>
 <%= image.size.to_i %> bytes
</p>

<%= link_to 'Edit', edit_image_path(image) %> |
<%= link_to 'Back', images_path %>

<h1> Older Versions </h1>
<% unless image.versions.count == 0 %>
  <% image.versions.each do |version| unless version.reify.nil? %>
    <%= image_tag version.reify.image_url(:thumb).to_s %>
    <%= link_to "Make current", '#' %> |
    <%= link_to "Destroy version", '#' %>
<% end end end %>